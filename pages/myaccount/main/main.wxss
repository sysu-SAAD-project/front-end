/* main.wxss */

.userInfo {
    background-color: #5074d7;
    width: 100%;
    height: 300rpx;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
    float: left;
    position: relative;
    top: 50%;
    transform: translate(25%, -75%);
    display:block; 
    overflow:hidden;
}

.userinfo-nickname {
    color: white;
    margin-left: 40rpx;
    float: left;
    position: relative;
    top: 50%;
    transform: translate(20%, -50%)
}

.myc-navigate {
    height: 40rpx;
    margin: 0 auto;
    padding: 25rpx 0;
}

.unusable {
  color: #aaaaaa;
}

.nav-icon {
    width: 40rpx;
    height: 40rpx;
    float: left;
    margin-left: 15rpx;
}

.nav-icon-right {
    width: 40rpx;
    height: 40rpx;
    float: right;
}

.nav-text {
    float: left;
    margin-left: 25rpx;
}

.list-container {
    padding: 10rpx 30rpx;
}