/* enroll.wxss */

.enroll-container {
    margin: 20rpx 40rpx;
}

.section {
    margin: 40rpx auto;
    position: relative;
}

.section__title {
    font: 16pt bold;
    margin: 15rpx auto;
}

.enroll-main-title {
    font-size: 16pt;
    font-weight: bold;
    color: black;
    text-align: center;
    margin: 30rpx auto;
}

.success-icon {
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    margin: 130rpx auto;
}

.main-text {
    font-size: 20pt;
    font-weight: bold;
    margin: 80rpx auto;
}

.detail-text {
    font-size: 14pt;
    margin: 80rpx auto;
}

.blank-notify {
    position: absolute;
    font-size: 10pt;
    top: 0;
    right: 0;
}