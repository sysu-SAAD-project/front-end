<!--enroll.wxml-->
<view class="enroll-main-title">{{currentPoster.name}}</view>
<view class="divLine"></view>
<view class="enroll-container" wx:if="{{isFillingForm}}">
    <form bindsubmit="formSubmit">
        <view class="section">
            <view class="section__title">姓名</view>
            <input name="stu_name" placeholder="请输入姓名" />
            <view class="blank-notify" wx:if="{{blankNotify.stu_name}}">姓名不能留空哦</view>
        </view>
        <view class="section">
            <view class="section__title">院系</view>
            <input name="stu_school" placeholder="请输入院系" />
            <view class="blank-notify" wx:if="{{blankNotify.stu_school}}">院系不能留空哦</view>
        </view>
        <view class="section">
            <view class="section__title">学号</view>
            <input name="stu_number" type="number" placeholder="请输入学号" />
            <view class="blank-notify" wx:if="{{blankNotify.stu_number}}">学号不能留空哦</view>
            <view class="blank-notify" wx:elif="{{formatNotify.stu_number}}">注意学号格式哦</view>
        </view>
        <view class="section">
            <view class="section__title">手机</view>
            <input name="stu_tel" type="number" placeholder="请输入手机" />
            <view class="blank-notify" wx:if="{{blankNotify.stu_tel}}">手机号不能留空哦</view>
            <view class="blank-notify" wx:elif="{{formatNotify.stu_tel}}">注意手机号格式哦</view>
        </view>
        <button formType="submit">提交</button>
    </form>
</view>

<view class="enroll-container" wx:if="{{!isFillingForm}}">
    <!--正式用的时候用个Image  -->
    <icon class="success-icon" type="success" size="70" />
    <view class="success-text-container">
        <view class="main-text center">报名成功</view>
        <view class="detail-text center">您的报名信息主办方已经收到</view>
    </view>
    <view class="blue-button" bindtap="confirmButtonTap">
        <view class="button-innerText">确定并返回</view>
    </view>
</view>