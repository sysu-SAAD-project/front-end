/**app.wxss**/

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.center {
    text-align: center;
}

.blue-button {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 80rpx;
    background-color: #5074d7;
    border-radius: 10px;
    margin: 25rpx auto;
    margin-bottom: 0rpx;
}

.grey-button {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 80rpx;
    background-color: #f7f7f7;
    border-radius: 10px;
    margin: 25rpx auto;
    margin-bottom: 0rpx;
}


.button-innerText {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    text-align: center;
    font-size: 16pt;
    color: white;
}

.button-innerText-error {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    text-align: center;
    font-size: 16pt;
    color: gray;
}

.divLine {
    background: #E0E3DA;
    width: 100%;
    height: 2rpx;
}

.verticalLine {
  display: table-column;
  background: #E0E3DA;
  width: 2rpx;
  height: 80rpx;
  margin: 0 10rpx;
}

.single-checkbox {
  float: right;
  border: #E0E3DA solid 1px;
  padding: 2rpx 2rpx;
  border-radius: 18px;
  height: 36rpx;
  width: 36rpx;
  text-align:center; 
}

.single-checkbox image {
  visibility: hidden;
  height: 36rpx;
  width: 36rpx;
}

 .checkbox-box {
   /* display: inline-block; */
  padding: 10rpx 20rpx;
} 

.checkbox-text {
    display: inline-block;
}

.checkbox-label {
    display: inline-block;
    width: 50%;
    height: 60rpx;
    font-size: 12pt;
}

.topBar {
    height: 80rpx;
}

.topBarButton {
  display: table-column;
  width: 200rpx;
  height: 60rpx;
  margin: 10rpx;
  border-radius: 0;
}

.blueView {
  display: table-column;
  width: 200rpx;
  height: 60rpx;
  margin: 10rpx;
  border-radius: 0;
}

.topBarButton view {
  display: inline-block;
  height: 60rpx;
  width: 70rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 10pt;
  overflow: hidden;  
  white-space: nowrap; 
  text-overflow: ellipsis;
}

 /* .topBarButton text {
  overflow: hidden;超出部分隐藏   
   white-space: nowrap;不换行 
  text-overflow: ellipsis;超出部分文字以...显示   
}  */

.blueView view {
  display: inline-block;
  height: 60rpx;
  width: 120rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 10pt;
  overflow: hidden;  
  white-space: nowrap; 
  text-overflow: ellipsis;
  color: #5074d7;
} 

.blueView image {
  display: none;
}

.topBarButton-hover {
    border-radius: 0;
    border: none;
}

button[class="topBarButton"]::after {
    border: none;
} 

.is_checked {
  color: white;
  background: #5074d7;
  border: #5074d7 solid 1px;
}

.is_checked image {
  visibility: visible;
  height: 36rpx;
  width: 36rpx;
}

.topBar-cell {
    display: table-column;
    width: 33%;
    text-align: center;
}

.inline-bl {
    display: inline-block
}

.single-poster-tag {
    display: inline-block;
    height: 38rpx;
    line-height: 38rpx;
    margin-right: 8rpx; 
    padding: 2rpx 6rpx; 
    font-size: 10pt;
    color: white;
    background-color: #5074d7;
    border-radius: 8rpx;
}

